{
  "name": "DeenBridge | AI Islamic Librarian",
  "short_name": "DeenBridge",
  "description": "An AI-powered Islamic reference application that provides verifiable information from pre-vetted sources.",
  "start_url": "/",
  "scope": "/",
  "display_override": [
    "window-controls-overlay",
    "standalone"
  ],
  "display": "standalone",
  "orientation": "portrait-primary",
  "background_color": "#1a3a6b",
  "theme_color": "#1a3a6b",
  "categories": ["education", "books", "lifestyle"],
  "icons": [
    {
      "src": "/icon.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icon.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable"
    },
    {
      "src": "/icon-monochrome.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "monochrome"
    }
  ],
  "shortcuts": [
    {
      "name": "Start a New Chat",
      "short_name": "New Chat",
      "description": "Begin a new conversation with DeenBridge",
      "url": "/?action=new-chat",
      "icons": [{ "src": "/icons/new_chat.svg", "sizes": "96x96", "type": "image/svg+xml", "purpose": "any" }]
    },
    {
      "name": "Read the Holy Quran",
      "short_name": "Quran",
      "description": "Open the Quran reader to browse and search",
      "url": "/?action=read-quran",
      "icons": [{ "src": "/icons/read_quran.svg", "sizes": "96x96", "type": "image/svg+xml", "purpose": "any" }]
    },
    {
      "name": "Quran Topic Analysis",
      "short_name": "Analysis",
      "description": "Analyze a topic throughout the Quran",
      "url": "/?action=quran-analysis",
      "icons": [{ "src": "/icons/quran_analysis.svg", "sizes": "96x96", "type": "image/svg+xml", "purpose": "any" }]
    }
  ],
  "widgets": [
    {
      "name": "DeenBridge Actions",
      "short_name": "DeenBridge",
      "description": "Quickly start a new chat or open the Quran.",
      "tag": "deenbridge-widget",
      "ms_ac_template": "/widget-template.json"
    }
  ],
